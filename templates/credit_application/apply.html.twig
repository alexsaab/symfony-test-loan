{# templates/credit_application/apply.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Заявка на кредит{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Loan Application</h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <h3>Loan information</h3>
                <div class="mb-3">
                    {{ form_label(form.credit_amount) }}
                    {{ form_widget(form.credit_amount, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.credit_amount) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.credit_term) }}
                    {{ form_widget(form.credit_term, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.credit_term) }}
                </div>
            </div>
            <div class="col-md-6">
                <h3>Personal data</h3>
                <div class="mb-3">
                    {{ form_label(form.client_firstname) }}
                    {{ form_widget(form.client_firstname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_firstname) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_lastname) }}
                    {{ form_widget(form.client_lastname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_lastname) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_average_monthly_income) }}
                    {{ form_widget(form.client_average_monthly_income, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_average_monthly_income) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_email) }}
                    {{ form_widget(form.client_email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_email) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_phone) }}
                    {{ form_widget(form.client_phone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_phone) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_age) }}
                    {{ form_widget(form.client_age, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_age) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_ssn) }}
                    {{ form_widget(form.client_ssn, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_ssn) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <div class="col-md-12">
                <h3>Address data</h3>
                <div class="mb-3">
                    {{ form_label(form.client_state) }}
                    {{ form_widget(form.client_state, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_state) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_city) }}
                    {{ form_widget(form.client_city, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_city) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_postal_code) }}
                    {{ form_widget(form.client_postal_code, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_postal_code) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.client_address) }}
                    {{ form_widget(form.client_address, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.client_address) }}
                </div>
                {{ form_widget(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
